pipeline {
    environment {
        mydockerhub = "charanavvari/myrepo"
        dockerCredentialID = 'dockerhub_jenkins_creds_id'
        dockerImage = ''
    }
    agent any

    stages {
        stage('checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build maven app') {
            steps {
                sh "mvn package -B test"
                sh "ls -l target"
                sh "mv target/SpringBootLogger-0.0.1-SNAPSHOT.jar . "
            }
        }
           stage('Building docker image') { 
            steps { 
                script { 
                   // dockerImage = docker.build mydockerhub + ":$BUILD_NUMBER" 
                   sh "sudo docker build -t charanavvari/myrepo:${BUILD_NUMBER} . "
                }
            } 
        }
        stage('Deploy docker image') { 
            steps { 
                script { 
                    docker.withRegistry( '', dockerCredentialID ) { 
                        dockerImage.push() 
                    }
                } 
            }
        } 
    }
}
